class studentuser(
$uid = '502',
$gid = 'staff',
$home = '/Users/students'
) {

  user { 'students':
    shell => '/bin/bash',
    password => '',
    comment => 'Student User',
    home => $home,
    ensure => 'present',
    uid => $uid,
    gid => $gid,
}

  file { '/Users/students':
    ensure  => 'directory',
    owner   => 'students',
    group   => 'staff',
    recurse => true,
    force   => true,  
  }
} # End of Class
